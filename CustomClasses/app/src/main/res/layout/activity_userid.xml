<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_userid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.siddharh.Configuration.ToGetUseridActivity">

    <TextView
        android:text="Refferalcode is as follows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RefferalCodeTexview"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/UseridTextview"
        android:layout_marginStart="72dp" />

    <Button
        android:text="click to hit!!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SubmitButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/RefferalCodeTexview"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text=" ENTER THE VALUES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LabelTextview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/UsernameEdittext"
        android:layout_alignBaseline="@+id/UseridTextview"
        android:layout_alignBottom="@+id/UseridTextview"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UseridTextview"
        android:layout_marginStart="12dp"
        android:layout_above="@+id/RefferalCodeTexview"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="69dp" />
</RelativeLayout>
