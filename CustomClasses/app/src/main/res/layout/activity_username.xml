<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_username"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.siddharh.Configuration.ToGetUseridActivity">

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="94dp"
        android:id="@+id/UsernameTextview"
         android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <TextView
        android:text="Userid is as follows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="114dp"
        android:id="@+id/ResultTextview"
        android:layout_below="@+id/UsernameEdittext"
        android:layout_alignStart="@+id/UsernameEdittext" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/UsernameEdittext"
        android:layout_alignBaseline="@+id/UsernameTextview"
        android:layout_alignBottom="@+id/UsernameTextview"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text=" ENTER THE VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LabelTextview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <Button
        android:text="click to hit!!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LoginButton"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/LabelTextview" />
</RelativeLayout>
